    <ImageView
        android:id="@+id/satepad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:contentDescription="@string/des_spght"
        app:srcCompat="@drawable/spaghetti" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/satepad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Spaghetti ABC \n Harga: Rp.40.000 \n Extra Cheese Rp.55.000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Spaghetti ABC"
        android:textSize="25dp" />

</RelativeLayout>
